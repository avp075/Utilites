import org.apache.http.HttpResponse;
import org.apache.http.client.methods.HttpPost;
import org.apache.http.entity.StringEntity;
import org.apache.http.impl.client.CloseableHttpClient;
import org.apache.http.impl.client.HttpClients;
import org.apache.http.util.EntityUtils;

import java.net.URLEncoder;
import java.nio.charset.StandardCharsets;
import java.util.Base64;

public class SonarQubeCreatePermissionTemplate {
    public static void main(String[] args) {
        String apiUrl = "https://sonarqube.example.com/api/permissions/create_template";
        String token = "your_sonarqube_token";
        
        // Parameters for the permission template
        String templateName = "NewTemplateName";  // Name of the new permission template
        String description = "This is a new permission template";  // Description of the permission template
        String projectKeyPattern = ".*";  // Pattern to match project keys (optional)

        try (CloseableHttpClient httpClient = HttpClients.createDefault()) {
            HttpPost request = new HttpPost(apiUrl);

            // URL encode the parameters
            String payload = String.format("name=%s&description=%s&projectKeyPattern=%s",
                    URLEncoder.encode(templateName, StandardCharsets.UTF_8),
                    URLEncoder.encode(description, StandardCharsets.UTF_8),
                    URLEncoder.encode(projectKeyPattern, StandardCharsets.UTF_8));

            // Set the Authorization header
            String encodedAuth = Base64.getEncoder().encodeToString((token + ":").getBytes());
            request.setHeader("Authorization", "Basic " + encodedAuth);
            request.setHeader("Content-Type", "application/x-www-form-urlencoded");

            // Set the payload
            request.setEntity(new StringEntity(payload));

            // Execute the request
            HttpResponse response = httpClient.execute(request);
            int responseCode = response.getStatusLine().getStatusCode();
            System.out.println("Response Code: " + responseCode);

            // Parse the response
            String responseBody = EntityUtils.toString(response.getEntity());
            System.out.println("Response: " + responseBody);

        } catch (Exception e) {
            e.printStackTrace();
        }
    }
}
